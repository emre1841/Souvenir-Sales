<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -Souvenir Sales Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <style>
        .navbar-inverse .navbar-nav > li > a {
            color: #ffffff;
        }
        .navbar-inverse .navbar-brand {
            color: #ffffff;
        }
        .navbar-inverse {
            background-color: #03A9F4;
            border-color: #03a9f4;
        }
        .btn-primary {
            color: #fff;
            background-color: #03a9f4;
            border-color: #03a9f4;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Souvenir Sales", "Index", "Admin", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li><a href="/Category/Index"><i class="fa fa-th-list" aria-hidden="true"></i> Category List</a></li>
                    <li><a href="/Product/Index"><i class="fa fa-gift" aria-hidden="true"></i> Product List</a></li>
                    <li><a href="/Admin/UserList"><i class="fa fa-users" aria-hidden="true"></i> User List</a></li>
                    <li><a href="/Admin/OrderList"><i class="fa fa-truck" aria-hidden="true"></i> Order List</a></li>
                    <li><a href="https://www.google.com.tr/" target="_blank"><i class="fa fa-google" aria-hidden="true"></i> GOOGLE</a></li>


                </ul>
                <ul class="nav navbar-nav pull-right">
                    <li ><a href="/Account/LogOut"><i class="fa fa-sign-out" aria-hidden="true"></i> Log Out</a></li>

                </ul>

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Souvenir Sales</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
