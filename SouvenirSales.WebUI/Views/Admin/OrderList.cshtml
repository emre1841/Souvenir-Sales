@model IEnumerable<SouvenirSales.WebUI.Models.Entities.Order>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12" style="margin-top:5%">
            <h4>Order List</h4>
            <table class="table table-bordered table-responsive">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Address</th>
                        <th scope="col">TCKN</th>
                        <th scope="col">Telephone</th>
                        <th scope="col">Order Date</th>
                        <th scope="col">Total Price</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <th scope="row">@item.ID</th>
                        <td>@item.User.Name</td>
                        <td>@item.User.LastName</td>
                        <td>@item.User.Email</td>
                        <td>@item.User.Adress</td>
                        <td>@item.User.TCKN </td>
                        <td>@item.User.Telephone</td>
                        <td>@item.CreateDate</td>
                        <td>@item.TotalPrice</td>
                        <td>
                            <a href="/Admin/OrderProducts?id=@item.ID" title="List Of Product"><i class="fa fa-address-card" aria-hidden="true"></i></a>

                        </td>
                    </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>

