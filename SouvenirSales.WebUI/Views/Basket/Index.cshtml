@model IEnumerable< SouvenirSales.WebUI.Models.Entities.Basket>
@{
    ViewBag.Title = "Index";
   
        Layout = "~/Views/Shared/_UserLayout.cshtml";
    
}
<div class="container mb-4">
    <div class="row">
        @if (Model.Count() > 0)
        {
            <div class="col-12">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col"> </th>
                                <th scope="col">Product</th>
                                <th scope="col">Available</th>
                                <th scope="col" class="text-center">Quantity</th>
                                <th scope="col" class="text-right">Price</th>
                                <th> </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><img src="@item.Product.ImageUrl" width="50" height="50" /> </td>
                                    <td>@item.Product.Name</td>
                                    <td>@item.Product.Description</td>
                                    <td width="0%">
                                        <input class="form-control input-sm" type="text" style="width: 71px;text-align: center;margin-left: 178px" value="@item.Quantity" disabled />
                                    </td>
                                    <td class="text-right">@item.Product.Price ₺</td>
                                    <td class="text-right"><a href="/Basket/Delete?id=@item.ID" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i> </a> </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="col mb-2">
                <div class="row">
                    <div class="col-sm-12  col-md-6">
                        <a href="/Home/Index" class="btn btn-block btn-light" style="background-color:blue; color:white;" >Continue Shopping</a>
                    </div>
                    <div class="col-sm-12 col-md-6 text-right">
                        <a href="/Basket/AddToOrder?userId=@Model.FirstOrDefault().UserID" class="btn btn-lg btn-block btn-success text-uppercase">Checkout</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>





