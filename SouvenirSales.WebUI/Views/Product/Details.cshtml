@model SouvenirSales.WebUI.Models.Entities.Product
@{
    
        Layout = "~/Views/Shared/_UserLayout.cshtml";
   
}

<!--Section: Block Content-->

<section class="mb-5">

    <div class="row">
        <div class="col-md-6 mb-4 mb-md-0">

            <div id="mdb-lightbox-ui"></div>

            <div class="mdb-lightbox">

                <div class="row product-gallery mx-1">

                    <div class="col-12 mb-0">
                        <figure class="view overlay rounded z-depth-1 main-img">
                            <a href="#">
                                <img src="@Model.ImageUrl"
                                     class="img-fluid z-depth-1">
                            </a>
                        </figure>
                       
                    </div>
                   
                </div>

            </div>

        </div>
        <div class="col-md-6">

            <h5>@Model.Name</h5>


            <p><span class="mr-1"><strong>@Model.Price ₺</strong></span></p>
            <p class="pt-1">
                @Model.Description
            </p>
            <div class="table-responsive">
                <table class="table table-sm table-borderless mb-0">
                    <tbody>
                        <tr>
                            <th class="pl-0 w-25" scope="row"><strong>Model</strong></th>
                            <td>@Model.Model</td>
                        </tr>
                        <tr>
                            <th class="pl-0 w-25" scope="row"><strong>Brand</strong></th>
                            <td>@Model.Brand</td>
                        </tr>
                        <tr>
                            <th class="pl-0 w-25" scope="row"><strong>Category</strong></th>
                            <td>@Model.Category.Name</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <hr>


            <a href="/Basket/AddToBasket?id=@Model.ID" class="btn btn-success btn-md mr-1 mb-2">
                <i class="fas fa-shopping-cart pr-2"></i>Add to cart
            </a>
            <a href="/Home/Index?id=@Model.ID" class="btn btn-primary btn-md mr-1 mb-2" style="background-color:red; color:white;">
                <i class="fa fa-arrow-circle-left"></i> Go back to shopping
            </a>
            <a href="/Home/Index" class="btn btn-primary btn-md mr-1 mb-2" style="background-color:purple; color:white;">
                Back
            </a>
        </div>
    </div>

</section>
<!--Section: Block Content-->
